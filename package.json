{
  "name": "spoons",
  "description": "Gamified pub check-in app",
  "version": "0.0.12",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:ci": "jest --runInBand",
    "test:server": "jest --config jest.server.config.ts",
    "ssr": "ng build && npm run serve:ssr",
    "serve:ssr": "DEBUG=api:* VERBOSE_ENV=true node dist/spoons/server/server.mjs",
    "release": "standard-version",
    "analyze": "source-map-explorer dist/spoons/browser/*.js",
    "build:firebase": "ng build --configuration production",
    "deploy": "npm run build:firebase && firebase deploy"
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "19.2.16",
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/fire": "19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/platform-server": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@angular/service-worker": "^19.2.0",
    "@angular/ssr": "^19.2.12",
    "@jest/globals": "29.7.0",
    "axios": "1.9.0",
    "compression": "1.8.0",
    "cookie-parser": "1.4.7",
    "cors": "2.8.5",
    "debug": "4.4.1",
    "dotenv": "16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "7.5.0",
    "fast-xml-parser": "5.2.3",
    "firebase": "11.8.1",
    "nanoid": "5.1.5",
    "redis": "5.0.1",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "undefined": "0.1.0",
    "uuid": "11.1.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-builders/jest": "19.0.1",
    "@angular-devkit/build-angular": "^19.2.12",
    "@angular/cli": "^19.2.12",
    "@angular/compiler-cli": "^19.2.0",
    "@types/compression": "1.7.5",
    "@types/cookie-parser": "1.4.8",
    "@types/cors": "2.8.18",
    "@types/debug": "4.1.12",
    "@types/express": "^4.17.17",
    "@types/jest": "29.5.14",
    "@types/node": "18.19.104",
    "@types/supertest": "6.0.3",
    "browser-sync": "3.0.4",
    "firebase-admin": "13.4.0",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "jest-environment-jsdom": "29.7.0",
    "jest-preset-angular": "14.5.5",
    "source-map-explorer": "2.5.3",
    "standard-version": "9.5.0",
    "supertest": "7.1.1",
    "ts-jest": "29.3.4",
    "ts-node": "10.9.2",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": "20.x"
  }
}
